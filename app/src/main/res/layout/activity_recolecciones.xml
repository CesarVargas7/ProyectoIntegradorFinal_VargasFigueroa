<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFDE7"
    tools:context=".RecoleccionesActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mis Recolecciones"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFC107"
        android:gravity="center"
        android:padding="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <Button
            android:id="@+id/btnPuntos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mis Puntos"
            android:backgroundTint="#FFC107"
            android:textColor="#000000"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnRegistros"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mis Registros"
            android:backgroundTint="#FFE082"
            android:textColor="#000000"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtPuntos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Puntos acumulados: 0"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:gravity="center"
        android:layout_margin="24dp"
        android:padding="16dp"
        android:background="#FFF9C4"
        android:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRecolecciones"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:textSize="16sp"
        android:padding="12dp"
        android:backgroundTint="#E6E6E6"
        android:textColor="#000000"
        android:layout_margin="16dp" />
</LinearLayout>